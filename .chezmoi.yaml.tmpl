{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* Initializes the name variable with a default value */ -}}
{{- $name := "Your Name" -}}
{{- /* If name was previously set, reuses it */ -}}
{{- if hasKey . "name" -}}
{{-   $name = .name -}}
{{- /* Otherwise, if running interactively, prompts for a name */ -}}
{{- else if $interactive -}}
{{-   $name = promptString "name" $name -}}
{{- end -}}

{{- /* Does the same for the email */ -}}
{{- $email := "your@email.com" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptString "email" $email -}}
{{- end -}}

{{- /* Does the same for the SSH Key */ -}}
{{- $sshPrivateKey1PasswordUUID := "1Password UUID of the SSH private key" -}}
{{- if hasKey . "sshPrivateKey1PasswordUUID" -}}
{{-   $sshPrivateKey1PasswordUUID = .sshPrivateKey1PasswordUUID -}}
{{- else if $interactive -}}
{{-   $sshPrivateKey1PasswordUUID = promptString "sshPrivateKey1PasswordUUID" $sshPrivateKey1PasswordUUID -}}
{{- end -}}

{{- if $interactive -}}
{{-   writeToStdout "ðŸ’¡ Tip: you can re-enter name, email, and 1Password UUIDs with `chezmoi init --data=false`.\n" -}}
{{- end -}}

sourceDir: "{{ .chezmoi.sourceDir }}"

data:
  name: {{ $name | quote }}
  email: {{ $email | quote }}
  sshPrivateKey1PasswordUUID: {{ $sshPrivateKey1PasswordUUID | quote }}